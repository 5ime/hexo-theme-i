<div class="nexmoe-post">

  <article>
      <% if (page.cover){ %>
          <div class="nexmoe-post-cover" style="padding-bottom: <%- page.coverHeight/page.coverWidth*80 %>%;"> 
              <img data-src="<%- page.cover %>" data-sizes="auto" alt="<%= page.title %>" class="lazyload">
              <h1><%= page.title %></h1>
          </div>
      <%}  else{ %>
          <div class="nexmoe-post-cover" style="padding-bottom: <%- theme.background.height/theme.background.width*80 %>%;"> 
              <img data-src="<%- theme.background.path %>" data-sizes="auto" alt="<%= page.title %>" class="lazyload post-rand-cover">
              <h1><%= page.title %></h1>
          </div>
      <% } %>
      
      <%- partial('_partial/_post/meta') %>

      

      <%- page.content %>
  </article>

  <% if (!page.reprint){ %>
      <%- partial('_partial/copyright') %>
  <% } %>
  
  <%- partial('_partial/_post/tag') %>

  <% if (page.comments){ %>
      <div class="nexmoe-post-footer">
          <%- theme.comment ? partial('_partial/comment') : '' %>
      </div>
  <% } %>
</div>